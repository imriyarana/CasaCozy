<% layout("/layouts/boilerplate") %>
        <body>
        <h2>Cozy Spaces</h2>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </div>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i>
                <p>Skyline</p>
            </div>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i>
                <p>Peaks</p>
            </div>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i>
                <p>Fortress</p>
            </div>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i>
                <p>Countryside</p>
            </div>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i>
                <p>Frost</p>
            </div>
        </div>
        <div class="filter">
            <div>  <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing Pools</p>
            </div>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i>
                <p>Dome</p>
            </div>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i>
                <p>Boat</p>
            </div>
        </div>
            <div class="toggle-switch">
                <div class="form-check-reverse form-switch ">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
                  </div>
            </div>
    </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for (let listing of allListings){%>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text"> <b>
                                    <%= listing.title %></b><br>
            &#8377; <%=listing.price.toLocaleString('en-IN') %>/night <i class="tax-info"> &nbsp;&nbsp; +10% GST</i></p>
            
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>
